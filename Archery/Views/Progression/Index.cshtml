@model IEnumerable<Archery.Models.Progression>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DifficulteMaths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Xpmaths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifficulteFrancais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Xpfrancais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DifficulteAnglais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Xpanglais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DifficulteMaths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Xpmaths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficulteFrancais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Xpfrancais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DifficulteAnglais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Xpanglais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profil.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
